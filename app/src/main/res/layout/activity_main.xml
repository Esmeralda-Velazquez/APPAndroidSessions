<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/llLogoContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:background="#D886C5"
                android:elevation="15dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgLogo"
                    android:layout_width="250dp"
                    android:layout_height="266dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/icon_one" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llFieldsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llLogoContainer"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="-30dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="200dp"
                android:background="@drawable/shadow_background"
                android:elevation="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvHello"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:text="LOGIN"
                    android:textColor="@color/colorCustomText"
                    android:textSize="35sp"

                        />

                <EditText
                    android:id="@+id/etUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:drawableLeft="@drawable/imguser"
                    android:hint="  Username"
                    android:inputType="text"
                    android:textColor="@color/colorCustomText"
                    android:background="@color/white"
                    android:textColorHint="#D886C5"
                    android:padding="8dp"
                />


                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:drawableLeft="@drawable/imgpw"
                    android:hint=" Password"
                    android:inputType="textPassword"
                    android:textColor="#FF11F7"
                    android:background="@color/white"
                    android:textColorHint="#D886C5"
                    android:padding="8dp"
                 />

                <Button
                    android:id="@+id/btnLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/rounded_button"
                    android:text="GET IN"
                    android:textColor="@color/white"/>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
